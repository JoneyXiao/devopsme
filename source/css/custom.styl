// Custom styles for DevOps Interview Questions site

// Question and Answer styling
.post-body {
  h2 {
    background: #f8f9fa;
    padding: 10px 15px;
    border-radius: 5px;
    border-left: 5px solid #3498db;
    margin: 30px 0 20px;
  }

  h3 {
    color: #2c3e50;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
    margin-top: 30px;
  }

  ul, ol {
    margin-left: 1.2em;
    padding-left: 0.5em;
  }

  ul li, ol li {
    margin-bottom: 8px;
  }

  strong {
    color: #3498db;
  }

  blockquote {
    border-left: 4px solid #3498db;
    background-color: #f8fafc;
  }
}

// Category badges
.posts-expand .post-meta .post-category-list {
  .post-category {
    background: #3498db;
    padding: 2px 8px;
    border-radius: 3px;
    color: white;
    font-size: 0.8em;
    margin-right: 5px;
  }
}

// Code blocks styling
figure.highlight {
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

// Post title
.posts-expand .post-title {
  font-size: 28px;
  line-height: 1.4;
  margin-bottom: 20px;
  position: relative;
  
  &:after {
    content: "";
    display: block;
    width: 50px;
    height: 3px;
    background: #3498db;
    margin-top: 15px;
  }
}

// Improve readability
.post-body {
  line-height: 1.8;
  font-size: 1.05em;
  
  p {
    margin-bottom: 20px;
  }
}

// Custom styling for question sections
.post-body h2:contains("Question") {
  background: #ebf7fd;
  border-left-color: #2980b9;
}

// Custom styling for answer sections
.post-body h2:contains("Answer") {
  background: #f0f9f3;
  border-left-color: #27ae60;
}

// Improve mobile experience
@media (max-width: 767px) {
  .post-body {
    font-size: 1em;
    
    h2 {
      font-size: 1.4em;
    }
    
    h3 {
      font-size: 1.2em;
    }
  }
} 